# --- Application Ports ---
# The port your browser will use to access the frontend
FRONTEND_PORT=5173
# The port the frontend will use to call the backend API
BACKEND_PORT=8000
# The port you will use to connect to the database from your local machine
DB_PORT=5435

# --- PostgreSQL Database Configuration ---
POSTGRES_DB=goldshop_db
POSTGRES_USER=goldshop_user
POSTGRES_PASSWORD=yoursecretdbpassword

# --- Backend API Configuration ---
SECRET_KEY=yoursupersecretkeyforjwt
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Backend Internal Database URL (Do not change) ---
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# --- Frontend Configuration ---
# Variables exposed to the frontend MUST start with VITE_
VITE_API_URL=http://localhost:${BACKEND_PORT}/api/v1

# --- CORS Configuration ---
# A comma-separated list of origins that are allowed to connect to the backend.
# No trailing slash.
CORS_ORIGINS=http://localhost:${FRONTEND_PORT},http://127.0.0.1:${FRONTEND_PORT}